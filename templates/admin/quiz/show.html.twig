{% block title %}Quiz{% endblock %}

{% block content %}
    <h1>Quiz</h1>

    <table class="table">
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ quiz.id }}</td>
        </tr>
        <tr>
            <th>Title</th>
            <td>{{ quiz.title }}</td>
        </tr>
        <tr>
            <th>Slug</th>
            <td>{{ quiz.slug }}</td>
        </tr>
        <tr>
            <th>Slug</th>
            <td>{{ quiz.description }}</td>
        </tr>
        <tr>
            <th>Visible</th>
            <td>{{ quiz.visible ? 'Yes' : 'No' }}</td>
